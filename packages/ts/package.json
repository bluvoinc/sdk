{
  "name": "@bluvo/sdk-ts",
  "main": "dist/index.js",
  "module": "dist/index.esm.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/esm/index.js",
      "require": "./dist/index.js",
      "default": "./dist/index.js"
    },
    "./package.json": "./package.json"
  },
  "version": "2.0.8",
  "description": "Bluvo SDK for TypeScript",
  "author": "Bluvo Inc.",
  "license": "MIT",
  "homepage": "https://github.com/bluvoinc/sdk#readme",
  "repository": {
    "type": "git",
    "url": "https://github.com/bluvoinc/sdk.git"
  },
  "bugs": {
    "url": "https://github.com/bluvoinc/sdk/issues"
  },
  "scripts": {
    "dev": "tsc --watch",
    "build": "rm -rf dist dist-esm && tsc && tsc --project tsconfig.esm.json && node scripts/remove-console.js && node scripts/merge-builds.js",
    "test": "vitest run && pnpm test:browser",
    "test:browser": "vitest run --config vitest.browser.config.ts",
    "test:browser:ui": "vitest run --config vitest.browser.config.ts --ui",
    "test:browser:chromium": "vitest run --config vitest.browser.config.ts --browser=chromium",
    "test:browser:firefox": "vitest run --config vitest.browser.config.ts --browser=firefox",
    "test:browser:webkit": "vitest run --config vitest.browser.config.ts --browser=webkit",
    "prepublishOnly": "pnpm build"
  },
  "publishConfig": {
    "access": "public"
  },
  "keywords": [
    "bluvo",
    "sdk",
    "typescript",
    "nodejs",
    "api"
  ],
  "devDependencies": {
    "@vitest/browser": "^3.2.4",
    "@vitest/ui": "3.2.4",
    "esbuild": "^0.24.0",
    "playwright": "^1.56.0",
    "typescript": "^5.0.0",
    "vitest": "^3.2.4"
  },
  "files": [
    "dist/**/*",
    "README.md"
  ]
}
