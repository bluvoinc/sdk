{
  "name": "@bluvo/react",
  "version": "2.1.0",
  "description": "React hooks for Bluvo SDK - Framework-agnostic state machine for crypto withdrawals",
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.js",
      "default": "./dist/index.js"
    },
    "./package.json": "./package.json"
  },
  "author": "Bluvo Inc.",
  "license": "MIT",
  "homepage": "https://github.com/bluvoinc/sdk#readme",
  "repository": {
    "type": "git",
    "url": "https://github.com/bluvoinc/sdk.git",
    "directory": "packages/react"
  },
  "bugs": {
    "url": "https://github.com/bluvoinc/sdk/issues"
  },
  "scripts": {
    "dev": "tsup --watch",
    "build": "tsup",
    "test": "vitest run",
    "prepublishOnly": "pnpm build"
  },
  "publishConfig": {
    "access": "public"
  },
  "keywords": [
    "bluvo",
    "react",
    "hooks",
    "crypto",
    "withdrawal",
    "state-machine",
    "typescript"
  ],
  "peerDependencies": {
    "@bluvo/sdk-ts": "^1.0.0",
    "react": "^16.8.0 || ^17.0.0 || ^18.0.0"
  },
  "devDependencies": {
    "@bluvo/sdk-ts": "workspace:*",
    "@types/node": "^20",
    "@types/react": "^18.0.0",
    "react": "^18.0.0",
    "tsup": "^8.5.1",
    "typescript": "^5.0.0",
    "vitest": "^3.1.1"
  },
  "files": [
    "dist/**/*",
    "README.md"
  ]
}